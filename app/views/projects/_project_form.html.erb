

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :name_of_project %>
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :name_of_user %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_field :deadline %>
  </div>

  <%= f.submit %>
<% end %>
